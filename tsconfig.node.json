{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"],
  "paths": {
    "@/*": ["src/*"],
    "Components/*": ["src/Components/*"],
    "Interfaces/": ["src/Data/Interfaces/", "src/Data/Interfaces/*"],
    "Utilities/*": ["src/Utilities/*"],
    "Objects/*": ["src/Data/Objects/*"],
    "Styles/*": ["src/Styles/*"],
    "Providers/*": ["src/Providers/*"],
    "Shared/*": ["src/Shared/*"],
  }
}
