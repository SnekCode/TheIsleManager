{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"],
      "Components/*": ["src/Components/*"],
      "Interfaces/": ["src/Data/Interfaces/", "src/Data/Interfaces/*"],
      "Utilities/*": ["src/Utilities/*"],
      "Objects/*": ["src/Data/Objects/*"],
      "Styles/*": ["src/Styles/*"],
      "Providers/*": ["src/Providers/*"],
      "Shared/*": ["Shared/*"],
      "Electron/*": ["electron/*"],
      "Hooks/*": ["src/Hooks/*"],
      "Pages/*": ["src/Pages/*"],
      "assets/*": ["src/assets/*"],
    }
  },
  "include": ["src", "electron", "Shared", "package.json"],
  "references": [{ "path": "./tsconfig.node.json" }],

  /* For ts-node */
  "ts-node": {
    "esm": true
}
}
